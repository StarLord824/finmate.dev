generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id @default(uuid())
  title       String
  link        String
  source      String
  author      String?
  publishedAt DateTime
  summary     String?
  content     String?
  tags        String[]
  imageUrl    String?
  fingerprint String   @unique
  createdAt   DateTime @default(now())
  bookmarks   User[]   @relation("UserBookmarks")
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  preferences Json?
  bookmarks   Article[] @relation("UserBookmarks")
  createdAt   DateTime  @default(now())
}